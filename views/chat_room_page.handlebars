<body>
    <aside class="column box is-1 is-justify-content-space-between" id="sidebar">
        <div>
            <div id="your-chats-div">
                <h3 class="convo-h m-2">Your Chats</h3>
                <ul id="your-chats-ul">

                </ul>
            </div>
            <div id="other-chats-div">
                <h3 class="convo-h m-2">Other Chats</h3>
                <ul id="other-chats-ul">

                </ul>

            </div>
        </div>
        <div>
            <button class="logout-btn button is-link is-outlined p-2" id="logout-btn">Logout</button>
        </div>
    </aside>

    <div class="container box is-three-quarters m-auto has-background-white p-4">
        <div class="columns is-centered" id="chat-page-logo">
            <div class="column is-half">
                <img src="{{imageUrl}}" alt="logo" class="is-justify-content-center is-align-content-center">
            </div>
        </div>
        <div class="chat-messages" id="chat-messages">

            <div class="p-3 box" id="conversation-name-box">
                <h3 id="conversation-name-heading"></h3>
                <div class="buttons">
                    <form action="" id="add-user-form" class="is-flex is-align-items-center">
                        <input type="text" id="username-input" placeholder="Add user">
                        <button type="submit" class="button is-success fas fa-user-plus m-1" id="add-user-btn"></button>
                    </form>
                    <button class=" button is-danger fas fa-trash-alt m-1" id="delete-conv-btn"></button>
                </div>
            </div>

            <div class="chat-messages" id="chat-container">>



                <!-- Messages will appear here -->
                {{> chat}}
            </div>
            <form id="chat-form">
                <input id="chat-input" type="text" placeholder="Type a message..." name="message" required>
                <button class="button is-link is-outlined p-1" type="submit">SEND</button>
            </form>

            <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.2/socket.io.js"></script>
            <script src="./js/sidebar.js"></script>


</body>